# ===== SECURITY CONFIGURATION =====
# Generate a strong secret key: openssl rand -hex 32
SECRET_KEY=your-super-secure-secret-key-change-this-in-production-123456
FLASK_ENV=development

# ===== EMAIL CONFIGURATION (Optional - For Password Reset & Notifications) =====
# Gmail Example (Recommended for testing):
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your.email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@iqubledger.com

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=sqlite:///iqub_ledger.db

# ===== APPLICATION SETTINGS =====
# Port to run the application on
PORT=10000

# ===== SECURITY SETTINGS =====
# Rate limiting settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15

# Session settings (for production)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ===== FEATURE TOGGLES =====
# Enable/disable features (true/false)
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_2FA=false
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_AUDIT=true

# ===== ADMIN SETTINGS =====
# Default admin account (will be created if doesn't exist)
ADMIN_PHONE=0911000000
ADMIN_PASSWORD=admin123
ADMIN_NAME=Iqub Admin

# ===== EXPORT SETTINGS =====
# Maximum records to export
EXPORT_MAX_RECORDS=1000